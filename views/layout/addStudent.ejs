<% if (teachersView) { %>
 

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/resultdb">Student Records</a></li>
      <li class="breadcrumb-item active" aria-current="page">Add Student</li>
    </ol>
  </nav>
<br>
<h1 class="h2 mb-4" style="margin-left: 20px;">Add Student Data Form</h1>

<form action="/add" method="POST" style="padding-left: 11%; padding-right: 20%;">

    <div class="row form-group mb-4">
        <div class="col">
            <label for="studentName">Student Name</label>
            <input type="text" class="form-control" id="studentName" name="studentName" value=""
                placeholder="Student Name" required>
        </div>

        <div class="col">
            <label for="rollNo">Roll No.</label>
            <input type="number" class="form-control" id="rollNo" name="rollNo" value="" placeholder="Roll Number"
                required>
        </div>
    </div>
    <div class="row form-group mb-4">
        <div class="col">
            <label for="dob">D.O.B.</label>
            <input type="date" class="form-control" id="dob" name="dob" value="" placeholder="DOB" required>
        </div>

        <div class="col">
            <label for="score">Score</label>
            <input type="number" class="form-control" id="score" name="score" value="" placeholder="Score" required>
        </div>
        
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Student</button>
    </div>
</form>

<% } %>